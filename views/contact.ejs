<div class="container-fluid hero-header bg-light py-2 mb-5">
    <div class="container py-5">
        <div class="row g-5 align-items-center">
            <div class="col-lg-6">
                <h1 class="display-5 mb-3 animated slideInDown">
                    <span class="text-primary">Kapcsolatfelvétel</span> – írj nekünk bátran!
                </h1>
                <p class="text-secondary mb-4">
                    Itt tudsz üzenetet küldeni a cukrászda tulajdonosának.
                </p>
            </div>
            <div class="col-lg-6 text-center animated fadeIn">
                <img class="img-fluid animated pulse infinite" style="animation-duration: 3s; max-height: 280px;"
                    src="/images/contact.png" alt="Üzenetküldés">
            </div>
        </div>
    </div>
</div>

<%- include('flash-messages') -%>

    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-8">
                <div class="card shadow-sm mt-4 mb-5 bg-light">
                    <div class="card-body p-4">
                        <h4 class="h3 card-title mb-4 text-primary text-center">Írj nekünk üzenetet</h4>

                        <form method="post" action="/contact">
                            <div class="row">
                                <div class="col-md-6 mb-3">
                                    <label for="name" class="form-label">
                                        Név <span class="text-danger">*</span>
                                    </label>
                                    <input type="text" id="name" name="name"
                                        class="form-control <%= (typeof errors !== 'undefined' && errors.name) ? 'is-invalid' : '' %>"
                                        value="<%= (typeof formData !== 'undefined' && formData.name) ? formData.name : '' %>">
                                    <% if (typeof errors !=='undefined' && errors.name) { %>
                                        <div class="invalid-feedback">
                                            <%= errors.name %>
                                        </div>
                                        <% } %>
                                </div>

                                <div class="col-md-6 mb-3">
                                    <label for="email" class="form-label">
                                        E-mail cím <span class="text-danger">*</span>
                                    </label>
                                    <input type="email" id="email" name="email"
                                        class="form-control <%= (typeof errors !== 'undefined' && errors.email) ? 'is-invalid' : '' %>"
                                        value="<%= (typeof formData !== 'undefined' && formData.email) ? formData.email : '' %>">
                                    <% if (typeof errors !=='undefined' && errors.email) { %>
                                        <div class="invalid-feedback">
                                            <%= errors.email %>
                                        </div>
                                        <% } %>
                                </div>
                            </div>

                            <div class="mb-4">
                                <label for="message" class="form-label">
                                    Üzenet <span class="text-danger">*</span>
                                </label>
                                <textarea id="message" name="message" rows="6"
                                    class="form-control <%= (typeof errors !== 'undefined' && errors.message) ? 'is-invalid' : '' %>"
                                    placeholder="Írd ide az üzeneted..."><%= (typeof formData !== 'undefined' && formData.message) ? formData.message : '' %></textarea>
                                <% if (typeof errors !=='undefined' && errors.message) { %>
                                    <div class="invalid-feedback">
                                        <%= errors.message %>
                                    </div>
                                    <% } %>
                                        <div class="form-text">Minimum 10 karakter szükséges</div>
                            </div>

                            <div class="text-center">
                                <button type="submit" class="btn btn-primary btn-lg px-5">
                                    Üzenet küldése
                                </button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>

        <!-- Kapcsolati információk -->
        <div class="row mt-5 mb-5">
            <div class="col-md-4 text-center mb-4">
                <div class="card h-100 border-0 shadow-sm">
                    <div class="card-body">
                        <i class="fas fa-map-marker-alt text-primary fa-2x mb-3"></i>
                        <h5>Címünk</h5>
                        <p class="text-muted">1234 Budapest<br>Sütemény utca 12.</p>
                    </div>
                </div>
            </div>
            <div class="col-md-4 text-center mb-4">
                <div class="card h-100 border-0 shadow-sm">
                    <div class="card-body">
                        <i class="fas fa-phone text-primary fa-2x mb-3"></i>
                        <h5>Telefonszám</h5>
                        <p class="text-muted">+36 1 234 5678</p>
                    </div>
                </div>
            </div>
            <div class="col-md-4 text-center mb-4">
                <div class="card h-100 border-0 shadow-sm">
                    <div class="card-body">
                        <i class="fas fa-envelope text-primary fa-2x mb-3"></i>
                        <h5>E-mail</h5>
                        <p class="text-muted">info@cukicukraszda.hu</p>
                    </div>
                </div>
            </div>
        </div>
    </div>