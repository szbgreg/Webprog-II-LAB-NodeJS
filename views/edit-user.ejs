<div class="container-fluid hero-header bg-light py-2 mb-5">
    <div class="container py-5">
        <div class="row g-5 align-items-center">
            <div class="col-lg-6">
                <h1 class="display-5 mb-3 animated slideInDown">
                    <span class="text-primary">Felhasználó</span> szerkesztése
                </h1>
                <p class="text-secondary mb-4">
                    Itt módosíthatod a felhasználó jogosultságát.
                </p>
            </div>
            <div class="col-lg-6 text-center animated fadeIn">
                <img class="img-fluid animated pulse infinite" style="animation-duration: 3s; max-height: 260px;"
                    src="/images/admin.png" alt="Sütemény diagram">
            </div>
        </div>
    </div>
</div>

<%- include('flash-messages') -%>

    <div class="container mb-5">
        <div class="row justify-content-center">
            <div class="col-lg-8">
                <div class="card shadow-sm bg-light">
                    <div class="card-body">
                        <h4 class="text-dark mb-4">#<%= user.id %> – <%= user.name %> <span
                                        class="text-primary">jogosultságának beállítása</span></h4>

                        <form action="/admin/users/<%= user.id %>/edit" method="POST">

                            <div class="mb-3">
                                <label class="form-label">Név</label>
                                <input type="text" class="form-control" value="<%= user.username %>" disabled>
                            </div>

                            <div class="mb-3">
                                <label for="isAdmin" class="form-label">Szerepkör</label>
                                <select id="isAdmin" name="isAdmin"
                                    class="form-select <%= (typeof errors !== 'undefined' && errors.isAdmin) ? 'is-invalid' : '' %>"
                                    <%=currentUser.username===user.username ? 'disabled' : '' %>>
                                    <option value="0" <%=user.isAdmin==0 ? 'selected' : '' %>>Felhasználó</option>
                                    <option value="1" <%=user.isAdmin==1 ? 'selected' : '' %>>Admin</option>
                                </select>
                                <% if (typeof errors !=='undefined' && errors.isAdmin) { %>
                                    <div class="invalid-feedback">
                                        <%= errors.isAdmin %>
                                    </div>
                                    <% } %>
                            </div>

                            <div class="d-flex justify-content-end gap-2">
                                <a href="/admin/users" class="btn btn-outline-secondary">
                                    Vissza
                                </a>
                                <button type="submit" class="btn btn-primary">
                                    Mentés
                                </button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>

    </div>